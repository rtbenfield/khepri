{
  "version": "0.2.0",
  "configurations": [
    // Starts Khepri Code with Khepri Deno (still WIP)
    {
      "name": "Deno: Dev (code)",
      "request": "launch",
      "type": "pwa-node",
      "cwd": "${workspaceFolder}/code",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect",
        "--allow-all",
        "--import-map",
        "../deno/import_map.json",
        "../deno/cli.ts",
        "dev"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    // Manually verifies the Khepri Deno `help` command
    {
      "name": "Deno: Help",
      "request": "launch",
      "type": "pwa-node",
      "program": "./deno/cli.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect",
        "--allow-all",
        "--import-map",
        "./deno/import_map.json",
        "./deno/cli.ts",
        "help"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
  ]
}